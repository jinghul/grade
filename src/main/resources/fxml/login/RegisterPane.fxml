<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.*?>

<GridPane fx:id="root" opacity="0.0" prefHeight="600.0" prefWidth="1050.0" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="twelve.team.controllers.login.RegisterPane">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" fillWidth="false" spacing="10.0" style="-fx-background-color: #fff;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <effect>
            <DropShadow blurType="TWO_PASS_BOX" />
         </effect>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Register" wrappingWidth="400.0">
               <styleClass>
                  <String fx:value="text-bold" />
                  <String fx:value="text-main" />
                  <String fx:value="header-sm" />
               </styleClass>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Text>
            <Line endX="50.0" startX="-400.0" stroke="#6200b3">
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Line>
            <Text fx:id="txt_error" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-sm" text="Error." visible="false">
            </Text>
            <TextField fx:id="tf_name" prefWidth="250.0" promptText="Name" styleClass="textbox">
            </TextField>
            <TextField fx:id="tf_username" prefWidth="250.0" promptText="Username" styleClass="textbox">
            </TextField>
            <PasswordField fx:id="tf_password" prefWidth="250.0" promptText="Password" styleClass="textbox">
            </PasswordField>
            <Button fx:id="btn_confirm" mnemonicParsing="false" prefWidth="250.0" text="Confirm">
               <styleClass>
                  <String fx:value="button-primary" />
                  <String fx:value="background-main" />
               </styleClass>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btn_cancel" mnemonicParsing="false" prefWidth="250.0" text="Return to Login">
               <styleClass>
                  <String fx:value="button-alt" />
                  <String fx:value="border-main" />
                  <String fx:value="button-text-main" />
               </styleClass>
            </Button>
         </children>
      </VBox>
   </children>
</GridPane>
