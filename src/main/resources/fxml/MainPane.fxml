<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import twelve.team.controllers.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import twelve.team.controllers.HomePane?>

<GridPane fx:id="root" minHeight="400.0" minWidth="800.0" prefHeight="600.0" prefWidth="1050.0" styleClass="pane" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="twelve.team.controllers.MainPane">
   <columnConstraints>
      <ColumnConstraints hgrow="NEVER" minWidth="210.0" prefWidth="210.0" />
      <ColumnConstraints hgrow="SOMETIMES" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="600.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <AnchorPane minHeight="400.0" minWidth="210.0" prefWidth="210.0" styleClass="sidebar">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Hello,">
                     <styleClass>
                        <String fx:value="text-bold" />
                        <String fx:value="text-sm" />
                     </styleClass>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Text>
                  <Text fx:id="txt_name" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Name">
                     <styleClass>
                        <String fx:value="text-bold" />
                        <String fx:value="text-lg" />
                     </styleClass>
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </Text>
               </children>
            </VBox>
            <VBox alignment="CENTER" minWidth="210.0" prefWidth="210.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <VBox spacing="10.0">
                           <padding>
                              <Insets right="20.0" />
                           </padding>
                           <children>
                              <Button fx:id="btn_home" mnemonicParsing="false" styleClass="button-sidebar" text="Home">
                                 <graphic>
                                    <ImageView fitHeight="25.0" preserveRatio="true">
                                       <image>
                                          <Image url="@../imgs/home_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Button>
                              <Button fx:id="btn_semester" alignment="TOP_LEFT" mnemonicParsing="false" styleClass="button-sidebar" text="Semester">
                                 <graphic>
                                    <ImageView fitHeight="25.0" preserveRatio="true">
                                       <image>
                                          <Image url="@../imgs/semester_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Button>
                              <Button fx:id="btn_course" mnemonicParsing="false" styleClass="button-sidebar" text="Courses">
                                 <graphic>
                                    <ImageView fitHeight="25.0" preserveRatio="true">
                                       <image>
                                          <Image url="@../imgs/course_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Button>
                              <Button fx:id="btn_grade" mnemonicParsing="false" styleClass="button-sidebar" text="Grade">
                                 <graphic>
                                    <ImageView fitHeight="25.0" preserveRatio="true">
                                       <image>
                                          <Image url="@../imgs/report_card_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Button fx:id="btn_logout" mnemonicParsing="false" styleClass="button-sidebar" text="Log Out" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0">
               <graphic>
                  <ImageView fitHeight="25.0" preserveRatio="true">
                     <image>
                        <Image url="@../imgs/logout_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <HomePane GridPane.columnIndex="1" />
   </children>
</GridPane>
